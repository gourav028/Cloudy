<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">


        <net.grobas.view.PolygonImageView
            android:id="@+id/contact_profile_pic_iv"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/profile"
            app:poly_border="false"
            app:poly_border_color="@android:color/white"
            app:poly_border_width="2dp"
            app:poly_shadow="true"
            app:poly_shadow_color="@android:color/black"
            app:poly_vertices="4"
            app:poly_corner_radius="100"
            app:poly_rotation_angle="45"
            />

        <!--
        <ImageView
            android:id="@+id/contact_profile_pic_iv"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/image_circle_stroke" />
-->
        <LinearLayout
            android:id="@+id/name_layout_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/contact_profile_pic_iv"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/single_contact_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gourav Bhosle"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/single_contact_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="819053393"
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>